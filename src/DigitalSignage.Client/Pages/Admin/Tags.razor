@page "/admin/tags"
@inject TagService TagService

<PageTitle>タグ管理</PageTitle>

<h1>タグ管理</h1>

<div class="mb-3">
    <a href="/admin/tags/new" class="btn btn-success">新規タグ作成</a>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (tags.Count == 0)
{
    <div class="alert alert-info">
        タグがありません。新規タグを作成してください。
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>名前</th>
                    <th>説明</th>
                    <th>作成日</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in tags)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td><span class="badge bg-secondary">@tag.Name</span></td>
                        <td>@(tag.Description ?? "-")</td>
                        <td>@tag.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                        <td>
                            <a href="/admin/tags/edit/@tag.Id" class="btn btn-sm btn-primary">編集</a>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteTag(tag.Id)">削除</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<TagDto> tags = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadTags();
    }

    private async Task LoadTags()
    {
        isLoading = true;
        try
        {
            tags = await TagService.GetAllTagsAsync();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteTag(int id)
    {
        if (await TagService.DeleteTagAsync(id))
        {
            await LoadTags();
        }
    }
}
